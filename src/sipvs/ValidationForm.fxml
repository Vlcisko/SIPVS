                            <children>
                                <Label fx:id="pathXSD">
                                    <HBox.margin>
                                        <Insets left="40.0"/>
                                    </HBox.margin>
                                </Label>
                            </children>
                        </HBox>
                        <Button mnemonicParsing="false" onAction="#loadXSD" text="Vyber XSD"/>
                    </children>
                </VBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#validateXmlXsd" text="Odoslať"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
